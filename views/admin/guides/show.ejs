<a href="/admin/guides/" class="back">// back</a>
<br>
<h2 class="adm-title">Guide <i><%= guide.id %></i></h2>

<table class="adm-table">
  <thead><tr>
    <th>Hired Date</th><th>Name</th><th>Phone</th>
    <th>Associated Tours</th>
  </tr></thead>
  <tbody>
  <tr>
    <td>
      <div class="author-name"><%= guide.hireDate.toDateString() %></div>
    </td>
    <td>
      <div class="author-name"><%= guide.name %></div>
    </td>
    <td>
      <div class="author-name"><%= guide.phone %></div>
    </td>
    <td>
      <% if (toursAssocCurrentGuide.length > 0) { %>
        <%- include('../../partials/tourGrid', { tours: toursAssocCurrentGuide }) %>
      <% } else { %>
        <div>-</div>
      <% } %>
    </td>
  </tr>
  </tbody>
</table>
<div class="btn-row" style="margin-top:15px;">
  <a class="btn-link" href="/admin/guides/<%= guide.id %>/edit">edit</a>
  <%- include('../../partials/deleteForm', { url: `/admin/guides/${guide.id}` }) %>
</div>

</div>

